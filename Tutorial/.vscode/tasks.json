{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch - tsconfig.json",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Build Site",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../TutorialBuilder"
			},
			"command": "node",
			"args": [
				"out/main.js"
			],
		}
	]
}